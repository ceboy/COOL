// MESHES

int mywait = 0;
string myname = "geo3";

border C1(t=0,1){x=t;y=0;label=1;}
border C2(t=0,1){x=1-t;y=t;label=2;}
border C3(t=0,1){x=0;y=1-t;label=3;}

plot(C1(10)+C2(10)+C3(10));

for(int finesse=1; finesse<=4; finesse++)
{
mesh Th = buildmesh(C3(10*finesse)+C1(10*finesse)+C2(10*finesse));

// BEWARE: POINTS LABELS (AMONG ADJACENT EDGES) ARE THAT OF THE LAST CURVES

savemesh(Th,myname+"mesh"+finesse+".msh");

Th=trunc(Th,1,split=2);

plot(Th,wait=mywait);
}


